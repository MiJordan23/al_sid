{
  "model_type": "t5",
  "load_checkpoint_from": "google-t5/t5-base",
  "dataset_name":"AL-GR/AL-GR-Tiny",
  "data_file":"train_data/s1_tiny.csv",
  "streaming": true,
  "custom_args": {
    "instruction_column": "system",
    "input_column": "user",
    "output_column": "answer",
    "max_length": 1280,
    "max_source_length": 1024,
    "max_target_length": 256
  },
  "training_args": {
    "do_train": true,
    "num_train_epochs": 4,
    "max_steps": 400000,
    "per_device_train_batch_size": 40,
    "save_total_limit": 2,
    "save_steps": 10000,
    "save_only_model": false,
    "logging_steps": 1000,
    "bf16": false,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "adam_epsilon": 1e-8,
    "learning_rate": 2e-4,
    "lr_scheduler_type": "constant",
    "dataloader_num_workers": 4,
    "accelerator_config":{
      "split_batches": true
    }
  }
}